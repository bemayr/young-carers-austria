---
layout: 'layouts/noborder'
pagination:
  data: cms._legacy.abc
  size: 1
  alias: category
permalink: "infos/{{ category.name | slugify }}/"
eleventyComputed:
  title: '{{ category.name }}'
---
<div class="container flex flex-row">
  <ul class="w-1/3 list-none p-0 mt-0 pr-7">
    {% for category in cms._legacy.abc %}
      <li class="pl-0">
      {{ category.name }}
      </li>
    {% endfor %}
  </ul>
  <div class="w-2/3">
    <h1 class="text-darkBlue">{{ category.title }}</h1>
    {% renderTemplate "liquid,md", category %} {{ information }} {% endrenderTemplate %}

    <ul class="list-none p-0">
    {% for entry in category.entries %}
      <li>
        {% if entry.ownerUrl == "" %}
          <h2 class="text-base uppercase text-gray-500">{{ entry.ownerName }}</h2>
        {% else %}
          <a href="{{ entry.ownerUrl }}"><h2>{{ entry.ownerName }}</h2></a>
        {% endif %}
      </li>
      <ul class="list-none p-0 m-0 pr-2 pb-2 flex flex-row flex-wrap gap-6 items-start">
      {% for reference in entry.references %}
        <li class="bg-white shadow-md border border-gray-200 rounded-lg max-w-sm p-0 m-0">
          <a class="no-underline" href="{{ reference.url }}">
            <img class="p-0 m-0 rounded-t-lg" src="{{ reference.previewImageUrl }}" alt="" />
            <div class="p-5">
                <h3 class="my-0 py-0 text-gray-900 font-bold text-2xl tracking-tight mb-2">{{ reference.title }}
                </h3>
              <p class="font-normal my-0 py-0 text-gray-700 decoration-transparent">{{ reference.description }}
              </p>
            </div>
          </a>
        </li>
      {% endfor %}
      </ul>
    {% endfor %}
    </ul>
  </div>
</div>
